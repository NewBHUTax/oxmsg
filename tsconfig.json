{
  "compilerOptions": {
    "lib": [
      "es2020",
      "dom"
    ],
    "target": "es2020",
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "skipLibCheck": true,

    "noEmitOnError": true,
    "noErrorTruncation": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    "strict": false,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noEmit": true,
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib/**/*.spec.ts"
  ]
}